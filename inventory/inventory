# ## Configure 'ip' variable to bind kubernetes services on a
# ## different ip than the default iface
# node1 ansible_ssh_host=95.54.0.12  # ip=10.3.0.1
# node2 ansible_ssh_host=95.54.0.13  # ip=10.3.0.2
# node3 ansible_ssh_host=95.54.0.14  # ip=10.3.0.3
# node4 ansible_ssh_host=95.54.0.15  # ip=10.3.0.4
# node5 ansible_ssh_host=95.54.0.16  # ip=10.3.0.5
# node6 ansible_ssh_host=95.54.0.17  # ip=10.3.0.6

node43 ansible_ssh_host=192.168.0.43 ip=192.168.0.43

node47 ansible_ssh_host=192.168.0.47 ip=192.168.0.47
node48 ansible_ssh_host=192.168.0.48 ip=192.168.0.48
node49 ansible_ssh_host=192.168.0.49 ip=192.168.0.49

